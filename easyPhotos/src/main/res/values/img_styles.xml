<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ImgEditTheme" parent="android:Theme.Holo">

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="ImgTextDialog" parent="android:Theme.Holo.Dialog">

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowSoftInputMode">stateAlwaysVisible|adjustResize</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>

        <item name="android:windowAnimationStyle">@style/ImgDialogAnimation</item>

    </style>

    <style name="ImgDialogAnimation" parent="android:Animation.Dialog">

        <item name="android:windowEnterAnimation">@anim/img_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/img_dialog_exit</item>

    </style>

</resources>